<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@drawable/background"
    android:padding="30dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Today's words"
            android:textColor="#fff"
            android:fontFamily="sans-serif-medium"
            android:textStyle="bold"
            android:textSize="32dp"
            android:textAlignment="center"
            android:layout_marginBottom="20dp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Learn some words!"
            android:id="@+id/btn_words"
            android:background="@drawable/button_background"
            android:layout_marginBottom="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/resultButtons">

            <Button
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@drawable/button_background"
                android:id="@+id/firsWord"
                android:layout_marginBottom="20dp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@drawable/button_background"
                android:id="@+id/secondWord"
                android:layout_marginBottom="20dp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@drawable/button_background"
                android:id="@+id/thirdWord"
                android:layout_marginBottom="20dp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@drawable/button_background"
                android:id="@+id/fourthWord"
                android:layout_marginBottom="20dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/resultPhrases"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="Report it"
                android:background="@drawable/button_background"
                android:id="@+id/report"
                android:layout_marginBottom="20dp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="Translate this words"
                android:background="@drawable/button_background"
                android:id="@+id/search"
                android:layout_marginBottom="20dp"/>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alpha 0.0.1"
        android:textColor="#fff"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"/>

</RelativeLayout>